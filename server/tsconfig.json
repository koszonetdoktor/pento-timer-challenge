{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "resolveJsonModule": true,
        "lib": [
            "es6",
            "es2017.string",
            "dom"
        ],
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "outDir": "./dist"
    },
    "include": [
        "./src"
    ],
    // no need to compile tests, they are run with ts-node
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}